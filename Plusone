
class Solution:
    def plusOne(self, digits: List[int]) -> List[int]:
        n = len(digits)

        for i in range(n - 1, -1, -1):  # start from last digit
            if digits[i] < 9:
                digits[i] += 1
                return digits
            digits[i] = 0  # carry over

        # If all were 9s, add 1 at the front
        return [1] + digits
